<p id="notice"><%= notice %></p>
<h1>BH's Corner</h1>
<div class="jumbotron">
  <img src="../images/blog.jpg"></img>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <div id="posts">
      <% @posts.each do |post| %>
      <div id="post">
        <h3><%= post.title %></h3>
        <%= simple_format post.body %>
        <small>
        <%= post.image %>
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
